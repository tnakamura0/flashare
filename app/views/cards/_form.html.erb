<%= form_with model: @card do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name, class: "block mt-3" %>
  <%= f.text_field :name, class: "bg-white border border-indigo-400/90 w-full mt-1 px-2 py-1" %>

  <%= f.label :meaning, class: "block mt-3" %>
  <%= f.text_area :meaning, class: "bg-white border border-indigo-400/90 w-full h-16 mt-1 px-2 py-1" %>

  <%= f.submit t("defaults.create"), class: "text-lime-50 bg-linear-to-r from-blue-500 to-violet-500 hover:opacity-70 border border-indigo-600 rounded block mx-auto mt-4 px-6 py-1.5" %>
<% end %>