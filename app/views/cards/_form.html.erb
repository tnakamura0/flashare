<div class="w-3/4">
<%= form_with model: @card do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mt-2">
    <div>
      <%= f.label :name %>
    </div>
    <div>
      <%= f.text_field :name, class: "text-black bg-white w-full mt-1 px-2" %>
    </div>
  </div>
  <div class="mt-2">
    <div>
      <%= f.label :meaning %>
    </div>
    <div>
      <%= f.text_area :meaning, class: "text-black bg-white w-full h-16 mt-1 px-2" %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit class: "border border-white rounded-lg w-[100px] mt-4" %>
  </div>
<% end %>
</div>