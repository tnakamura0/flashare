<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-8 px-2 md:px-10 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <h1 class="font-bold text-xl md:text-2xl lg:text-3xl"><%= t(".title") %></h1>
  <div>
    <% if @cards.present? %>
      <%= link_to t(".to_create_card_page"), new_card_path, class: "border-b-1 border-dashed" %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-2 md:gap-4 lg:gap-6">
        <%= render @cards %>
      </div>
    <% else %>
      <%= link_to t(".no_card_message"), new_card_path, class: "border-b-1 border-dashed" %>
    <% end %>
  </div>
</div>
