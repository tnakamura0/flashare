<% content_for(:title, t(".title")) %>
<div class="text-cyan-600">
  <h1 class="font-bold text-4xl mt-4"><%= t(".title") %></h1>
  <p class="text-xl mt-2 lg:mt-4"><%= @deck.name %></p>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-2 md:gap-4 lg:gap-6">
    <% @cards.each do |card| %>
      <div class="flex flex-col border rounded mx-auto mt-4 p-2 w-full h-[200px]">
        <p class="font-bold"><%= card.name %></p>
        <p class="mt-1"><%= card.meaning %></p>
        <div class="mt-auto text-right">
          <%= button_to t(".add"), deck_deck_cards_path(@deck, card_id: card.id), method: :post, class:"text-sky-50 bg-cyan-600 hover:opacity-70 px-4 py-0.5 border rounded" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
