<div class="flex flex-col border rounded-lg w-full h-[200px] p-2">
  <p class="font-bold"><%= deck.name %></p>
  <p class="mt-1"><%= deck.description %></p>
  <div class="mt-auto flex items-center justify-between">
    <div class="">
      <% if deck.public %>
        <i class="fa-solid fa-lock-open"></i>
      <% else %>
        <i class="fa-solid fa-lock"></i>
      <% end %>
    </div>
    <div class="mt-auto flex justify-end items-center">
      <% if deck_page == "show" %>
        <%= link_to deck_deck_cards_path(deck), class: "border-b border-dashed" do %>
          <i class="fa-solid fa-circle-plus"></i> <%= t("defaults.link.to_add_card_page") %>
        <% end %>
      <% else%>
        <%= link_to t("defaults.show"), deck_path(deck), class: "border-b border-dashed" %>
      <% end %>
      <span class="mx-1">|</span>
      <%= link_to edit_deck_path(deck), class: "text-lime-600 hover:opacity-70 border-b border-dashed" do %>
        <i class="fa-solid fa-file-pen"></i> <%= t("defaults.edit") %>
      <% end %>
      <span class="mx-1">|</span>
      <%= button_to deck_path(deck), class: "text-red-500 hover:opacity-70", method: :delete, data: { turbo_confirm: t("defaults.delete_confirm") } do %>
        <i class="fa-solid fa-trash-can"></i> <%= t("defaults.delete") %>
      <% end %>
    </div>
  </div>
</div>