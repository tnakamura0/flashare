<%= form_with model: @deck do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name, class: "block mt-3" %>
  <%= f.text_field :name, class: "bg-white border border-indigo-300 w-full mt-2 px-2 py-1" %>

  <%= f.label :description, class: "block mt-3" %>
  <%= f.text_area :description, class: "bg-white border border-indigo-300 w-full mt-2 px-2 py-1" %>

  <p class="mt-3"><%= t("defaults.public.config") %></p>
  <div class="mt-2">
    <%= f.radio_button :public, true %>
    <%= f.label :public_true, t("defaults.public.true") %>

    <span class="mx-1"></span>

    <%= f.radio_button :public, false, checked: true %>
    <%= f.label :public_false, t("defaults.public.false") %>
  </div>
  

  <%= f.submit class: "border border-indigo-400 hover:bg-violet-200 block mx-auto mt-6 py-1 w-24 rounded-xl" %>
<% end %>
