<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <div class="font-bold gap-2 mb-4 md:mb-4">
    <h1 class="text-2xl md:text-3xl mb-2"><%= t(".title") %></h1>
    <div class="text-indigo-400 text-xl md:text-2xl">
      <%= link_to t(".to_public_decks_page"), public_decks_path, class: "border-b-1 border-dashed" %>
      <%= link_to t(".to_create_deck_page"), new_deck_path, class: "ml-4 border-b-1 border-dashed" %>
    </div>
  </div>
  <% if @decks.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6">
      <% @decks.each do |deck| %>
        <%= render 'deck', deck: deck, deck_page: "index" %>
      <% end %>
    </div>
  <% end %>
</div>
