<% content_for(:title, t(".title")) %>
<div class="text-cyan-600">
  <h1 class="font-bold text-4xl mt-4"><%= t(".title") %></h1>
  <div>
    <% if @decks.present? %>
      <%= link_to t(".to_create_deck_page"), new_deck_path, class: "border-b-1 border-dashed" %>
      <div class="mb-4"></div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2 md:gap-4 lg:gap-6">
        <% @decks.each do |deck| %>
          <%= render 'deck', deck: deck, deck_page: "index" %>
        <% end %>
      </div>
    <% else %>
      <%= link_to t(".no_deck_message"), new_deck_path, class: "border-b-1 border-dashed" %>
    <% end %>
  </div>
</div>
