<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <div class="font-bold mb-4 md:mb-4">
    <div class="flex items-center justify-center gap-2 md:gap-4 mb-4">
      <h1 class="text-2xl md:text-3xl lg:text-4xl border-b-2"><%= t(".title") %></h1>
      <%= link_to t(".to_public_decks_page"), public_decks_path, class: "text-indigo-400 text-xl md:text-2xl" %>
    </div>
    <div class="text-center">
    <%= link_to new_deck_path, class: "text-indigo-500 text-xl md:text-2xl border-b-1 border-dashed" do %>
      <i class="fa-solid fa-square-plus"></i><%= t(".to_create_deck_page") %>
    <% end %>
    </div>
  </div>
  <% if @decks.present? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 lg:gap-6">
      <% @decks.each do |deck| %>
        <%= render 'deck', deck: deck, deck_page: "index" %>
      <% end %>
    </div>
  <% end %>
</div>
