<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <div class="flex items-center gap-2 md:gap-4 mb-4">
    <h1 class="font-bold text-xl md:text-2xl lg:text-3xl border-b-2"><%= t(".title") %></h1>
    <%= link_to t(".to_my_decks_page"), decks_path, class: "text-indigo-400 text-xl md:text-2xl" %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2 md:gap-4 lg:gap-6">
    <% @public_decks.each do |public_deck| %>
      <% if public_deck.deck_cards.exists? %>
        <%= render "public_deck", public_deck: public_deck %>
      <% end %>
    <% end %>
  </div>
</div>
