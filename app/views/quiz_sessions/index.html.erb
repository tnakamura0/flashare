<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <h1 class="font-bold text-2xl md:text-3xl lg:text-4xl mb-4 text-center">
    <span class="border-b-2"><%= t(".title") %></span>
  </h1>
  <% if @quiz_sessions.exists? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-2 md:gap-4 lg:gap-6">
      <%= render @quiz_sessions %>
    </div>
  <% else %>
    <div class="text-center">
      <%= link_to t(".no_question_message"), decks_path, class: "text-indigo-400 text-xl md:text-2xl border-b-1 border-dashed" %>
    </div>
  <% end %>
</div>
