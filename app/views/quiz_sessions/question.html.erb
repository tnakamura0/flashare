<% set_meta_tags title: t(".title") %>
<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50" data-controller="answer">
  <h1 class="font-bold text-3xl md:text-4xl">
    <i class="fa-regular fa-circle-question"></i><%= @quiz_session.deck.name %>
  </h1>
  <div class="flex flex-col items-center gap-4 bg-violet-100 mt-2 md:mt-4 p-4 md:p-6">
    <h2 class="font-bold text-xl md:text-2xl"><%= t(".quiz_number", number: @quiz_session.answered_count + 1) %></h2>
    <p class="font-medium text-2xl md:text-3xl border-b">
      <span class="animate-fade-in"><%= @random_card.name %></span>
    </p>
    <button class="text-lime-50 bg-linear-to-r from-blue-500 to-violet-500 hover:opacity-70 disabled:bg-gray-400 rounded px-2 py-1" data-answer-target="showAnswer" data-action="click->answer#switchButton"><i class="fa-regular fa-eye"></i> <%= t(".show_answer") %></button>
    <div class="hidden flex flex-col items-center" data-answer-target="answerButton">
      <div class="text-indigo-500">
        <i class="fa-solid fa-circle-check"></i><%= @random_card.meaning %>
      </div>
      <div class="flex gap-2 mt-4 md:mt-6">
        <%= button_to answer_quiz_session_path(@quiz_session), { class: "text-white bg-linear-to-r from-lime-600 to-teal-600 ring ring-emerald-800 hover:opacity-70 rounded px-4 py-1", method: :post, params: { correct: true, card_id: @random_card.id } } do %>
          <i class="fa-regular fa-face-smile-beam"></i> <%= t(".correct") %>
        <% end %>
        <%= button_to answer_quiz_session_path(@quiz_session), { class: "text-white bg-linear-to-r from-red-600 to-pink-600 ring ring-pink-800 hover:opacity-70 rounded px-2 py-1", method: :post, params: { correct: false, card_id: @random_card.id } } do %>
          <i class="fa-regular fa-face-dizzy"></i> <%= t(".incorrect") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
