<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-8 px-2 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <h1 class="font-bold text-3xl md:text-4xl">
    <i class="fa-solid fa-bullhorn"></i><%= t(".title") %>
  </h1>
  <p class="font-bold text-xl mt-2"><%= t(".result", total_questions: @quiz_session.total_questions, correct_number: @correct_number) %></p>
  <div class="bg-violet-100 mt-2 p-2">
    <table class="w-full mx-auto">
      <thead>
        <tr class="">
          <th class="border-r">No.</th>
          <th class="border-r">カード名</th>
          <th class="">正誤</th>
        </tr>
      </thead>
      <tbody>
        <% @answers.each_with_index do |answer, index| %>
        <tr class="text-center border-t">
          <td class="border-r"><%= index + 1 %></td>
          <td class="border-r"><%= answer.card.name %></td>
          <td>
            <% if answer.correct %>
              ⚪︎
            <% else %>
              ×
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <h2 class="font-bold text-xl mt-4">間違えたカード</h2>
  <div>
    <%= render @incorrect_answers %>
  </div>
  <div class="mt-4">
    <%= link_to t(".to_index_question_page"), quiz_sessions_path %>
  </div>
</div>
