<% content_for(:title, t(".title")) %>
<div class="mt-24 mb-18 md:mb-8 px-6 md:px-10 lg:px-16 py-4 md:py-8 rounded-2xl md:rounded-3xl bg-violet-50">
  <h1 class="font-bold text-4xl md:text-5xl"><%= t(".title") %></h1>
  <p class="text-indigo-500 text-lg md:text-xl mt-2"><%= t(".info") %></p>
  <div class="flex">
    <div class="[counter-reset:section]">
    <h2 class="font-bold text-2xl md:text-3xl mt-4 mb-2"><%= t(".how_to_use.title") %></h2>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step1.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step1.content_html", signup: link_to(t("defaults.signup"), new_user_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step2.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step2.content_html", create_card: link_to(t("defaults.create_card"), new_card_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step3.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step3.content_html", create_deck: link_to(t("defaults.create_deck"), new_deck_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step4.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step4.content_html", public_decks: link_to(t("defaults.public_decks"), public_decks_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step5.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step5.content_html", public_decks: link_to(t("defaults.public_decks"), public_decks_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    <div class="home-timeline">
      <h3 class="font-bold"><%= t(".how_to_use.step6.title") %></h3>
      <span class="text-violet-950">
        <%= t(".how_to_use.step6.content_html", quiz: link_to(t("defaults.quiz"), quiz_sessions_path, class: "text-indigo-500 border-b border-dashed") ) %>
      </span>
    </div>
    </div>
    <%= image_tag "/assets/icon.png", size: '400x400', class: "hidden lg:block pl-16" %>
  </div>
</div>
