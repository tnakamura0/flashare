<% set_meta_tags title: t(".title") %>
<div class="page-container w-full md:w-2/3 lg:w-2/5 mx-auto mt-24 px-8 md:px-10 py-6">
  <h1 class="font-bold text-2xl md:text-3xl lg:text-4xl text-center"><%= t(".title") %></h1>
  <%= form_with url: login_path do |f| %>
    <%= f.label :email, class: "block mt-3" %>
    <%= f.email_field :email, class: "bg-white border border-indigo-300 w-full mt-2 px-2 h-8.5 appearance-none" %>

    <%= f.label :password, class: "block mt-3" %>
    <%= f.password_field :password, class: "bg-white border border-indigo-300 w-full mt-2 px-2 py-1" %>

    <%= f.submit t(".login"), class: "primary-button block mx-auto mt-6 px-3 py-1.5" %>
  <% end %>
</div>
<div class="mt-2 md:mt-4 text-center">
  <%= link_to t('.to_register_page'), new_user_path, class: "border-b-1 border-dashed" %>
</div>
