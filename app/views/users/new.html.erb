<div class="bg-cyan-600 w-sm mx-auto my-12 px-10 py-6 rounded-4xl">
  <h1 class="font-bold text-xl">ユーザー登録</h1>
  <%= form_with model: @user do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="my-2">
      <%= f.label :name %>
    </div>
    <div>
      <%= f.text_field :name, class: "text-black bg-white w-full px-2" %>
    </div>
    <div class="my-2">
      <%= f.label :email %>
    </div>
    <div>
      <%= f.email_field :email, class: "text-black bg-white w-full px-2" %>
    </div>
    <div class="my-2">
      <%= f.label :password %>
    </div>
    <div>
      <%= f.password_field :password, class: "text-black bg-white w-full px-2" %>
    </div>
    <div class="my-2">
      <%= f.label :password_confirmation %>
    </div>
    <div>
      <%= f.password_field :password_confirmation, class: "text-black bg-white w-full px-2" %>
    </div>
    <%= f.submit "登録", class: "text-cyan-600 bg-sky-100 hover:bg-gray-300 block mx-auto mt-6 py-1 w-[100px] rounded-xl" %>
  <% end %>
</div>
